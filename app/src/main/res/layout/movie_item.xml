<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"

        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
                name="movie"
                type="com.notes.ayatkhraisat.mvppratctice.models.Model.MovieItem"/>

        <import type="java.lang.String"/>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="0dp"
                android:scaleType="fitXY"
                android:layout_height="150dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/iv_movie_poster"
                android:posterImage="@{movie.posterPath}"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_title"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintDimensionRatio="w,2:3"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                app:layout_constraintStart_toEndOf="@+id/iv_movie_poster"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:text="@{movie.title}"
                tools:text="Movie Name" app:layout_constraintTop_toTopOf="@+id/iv_movie_poster"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>
        <TextView
                tools:text="8.5/10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_rate"
                android:text="@{String.valueOf(movie.voteAverage)}"
                app:layout_constraintStart_toStartOf="@+id/tv_title"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>